class Solution {
  public:
    // Complete this function
    // Function to check whether there is a subarray present with 0-sum or not.
    bool subArrayExists(vector<int>& arr) {
        // Your code here
        unordered_set<int> subArray;
        int sum = 0;
        
        for(int i=0; i<arr.size(); i++){
            sum += arr[i];
            
            //if sum is 0 then true
            //if the value of sum is repeat then the sum of elements between those indices must be 0
            if(sum==0 || subArray.count(sum))
            return true;
            
            //is sum not found the insert it
            subArray.insert(sum);
        }
        return false;
    }
};
