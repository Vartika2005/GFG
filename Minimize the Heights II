class Solution {
  public:
    int getMinDiff(vector<int> &arr, int k) {
        int n = arr.size();
        sort(arr.begin(), arr.end());
        int ans = arr[n-1] - arr[0];
        
        int smallest, largest;
        
        for(int i=0; i<n-1; i++){
            smallest = min(arr[0]+k, arr[i+1]-k); find smallest from the whole array because smaller element can be found out at the end also
            largest = max(arr[i]+k, arr[n-1]-k);
            
            if(smallest < 0) //if smallest is negative then skip that iteration
            continue;
            
            ans = min(ans, largest-smallest);
        }
        return ans;
    }
};
